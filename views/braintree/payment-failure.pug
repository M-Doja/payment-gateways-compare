extends ../layout

block content
	ol.breadcrumb
		li.breadcrumb-item
			a(href="/") Home
		li.breadcrumb-item
			a(href="/braintree") Braintree
		li.breadcrumb-item.active Result
	.container
		.row
			.col-12
				img(src="/images/failure.svg" class="status-img")
				h1 Payment Failure
				p.description.has-error Reason: #{err_msg}
		.row
			.col-12
				a(href="/braintree") Click here to make payment again
