extends ../layout

block content
	ol.breadcrumb
		li.breadcrumb-item
			a(href="/") Home
		li.breadcrumb-item
			a(href="/stripe") Stripe
		li.breadcrumb-item.active Result
	.container
		.row
			.col-12
				img(src="/images/failure.svg" class="status-img")
				h1 Payment Failure
				h3.description.has-error Reason: #{err_msg}
				p
					a(href="/stripe") Click here to make payment again
