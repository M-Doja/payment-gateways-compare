extends ../layout.pug

block content
	ol.breadcrumb
		li.breadcrumb-item
			a(href="/") Home
		li.breadcrumb-item.active PayPal
	.jumbotron
		h2 Paypal Payment (#{mode})
		ul
			li NodeJS with paypal-rest-sdk NPM
			li Input amount and/or description
			li Click <kbd>Paid By PalPal</kbd> button
			li If payment successful, it redirects to Payment Successful page. Otherwise it redirects to Payment Failure page.

	form(action="/paypal/submit" method="POST")
		.form-group
			label(for="amount") Amount to pay
			input#amount.form-control.col-4(type="number" name="amount" value="1")
		.form-group
			label(for="description") Payment description
			input#description.form-control(type="text" name="description" maxlength="100" placeholder="Optional")
		button(class="btn btn-primary btn-lg" type="submit") Paid By PayPal
